<div class="row">
	<div class="col-sm-12 text-center">
		<div class = "profile-add" style="padding:10px;">
			<%= form_for @profile do |f| %>
				<h2 style="font-size:30px;">Give Us More Info About Yourself!</h2>
				<div class="form-group text-left">
					<%= f.label :name, style: 'display:block;' %>
					<%= f.text_field :name %>
				</div>
				<div class="form-group text-left">
					<%= f.label :gender, style: 'display:block;' %>
					<%= f.text_field :gender %>
				</div>
				<div class="form-group text-left">
					<%= f.label :top_size, style: 'display:block;' %>
					<%= f.text_field :top_size %>
				</div>
				<div class="form-group text-left">
					<%= f.label :bottom_size, style: 'display:block;' %>
					<%= f.text_field :bottom_size %>
				</div>
				<div class="form-group text-left">
					<%= f.label :location, style: 'display:block;' %>
					<%= f.text_field :location %>
				</div>
				<%= f.submit class: 'btn btn-default' %>
			<% end %>
		</div>
	</div>
</div>