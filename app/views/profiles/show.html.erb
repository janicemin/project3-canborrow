
<h1><%= @profile.closet.name %></h1>
<h2>Here are your choices </h2>
<div class= "garment">
<% @profile.closet.garments.each do |garment| %>
<%= button_to "borrow", borrows_path(borrow: { garment_id: garment.id}) %>
<% garment_url = garment.garment_url %>
<% image_url = garment.background_url %>
<%= image_tag(image_url) %>
<% end %>
</div>

<br>
<div id = "back-to-closet">
<%= link_to 'Go Back to Different Closets!', profiles_path %>
</div>
<br>

<div class = "garment-add">
<h1>Tell Me About Your Garment and Add It To Your Closet</h1>

<%= form_for [@closet, @garment] do |f| %>
	<%= f.label :garment_url %>
	<%= f.text_field :garment_url %>

	<br>
	<%= f.label :background_url %>
	<%= f.text_field :background_url %>
	</br>

	<br>
	<%= f.label :name %>
	<%= f.text_field :name %>
	</br>

	<br>
	<%= f.label :garment_type %>
	<%= f.text_field :garment_type %>
	</br>

	<br>
	<%= f.label :size %>
	<%= f.text_field :size %>
	</br>

	<br>
	<%= f.label :gender %>
	<%= f.text_field :gender%>
	</br>
	<%= f.submit %>

	<% end %>
</div>

<div class = "borrows">
	<h1>What Would You Like to Borrow From Me?</h1>


</div>



